<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.landkid.said.ui.widget.CollapsingBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_orderFlag="first">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" />
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_orderFlag="second"
            android:paddingLeft="18dp">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_search_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:text="@string/popular"
                android:textColor="#292c44"
                />

        </FrameLayout>

    </com.landkid.said.ui.widget.CollapsingBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        app:layout_behavior="@string/collapsing_bar_scroll_behavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_gravity="center"
        android:id="@+id/pb_loading"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:lottie_fileName="lotties/loading_indicator.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

    <!--<ProgressBar
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp" />-->

</android.support.design.widget.CoordinatorLayout>